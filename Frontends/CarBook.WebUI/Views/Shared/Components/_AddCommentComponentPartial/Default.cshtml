
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yapın</h3>
    <form method="post" asp-action="AddNewComment" asp-controller="Comment" asp-area="CarBookAdmin" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" class="form-control" id="name" name="Name" required>
            <input  type="hidden" value="@ViewBag.BlogId" name="BlogId" id="blogıd">
            <br />
            <label for="Email">Mail Adresiniz *</label>
            <input type="email" class="form-control" name="Email">
            <br />
            <label for="PhoneNumberme">Telefon Numarası *</label>
            <input type="text" class="form-control" name="PhoneNumber">
        </div>
           
        <div class="form-group">
            <label for="message">Mesajınız *</label>
            <textarea name="Description" id="message" cols="30" rows="10" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <button id="btn" class="btn py-3 px-4 btn-primary">Yorum Yapın</button>
        </div>
    </form>
</div>



