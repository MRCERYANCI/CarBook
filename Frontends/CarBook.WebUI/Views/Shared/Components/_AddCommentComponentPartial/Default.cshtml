
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yapın</h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" class="form-control" id="name" required>
            <input type="hidden" value="@ViewBag.BlogId"  id="blogıd">
        </div>
       
        <div class="form-group">
            <label for="message">Mesajınız *</label>
            <textarea id="message" cols="30" rows="10" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <input type="submit" id="btn" value="Yorum Yapın" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>



<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<script type="text/javascript">

    $("#btn").click(function () {
        let values = {
            Name: $("#name").val(),
            Description: $("#message").val(),       
            BlogId: $("#blogıd").val()
        };

        $.ajax({
            type: "post",
            url: "/CarBookAdmin/Comment/AddNewComment/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
                alert("Mesajınız Başarıyla İletilmiştir");
            }
        });
    });
</script>