<script src="~/chart.js"></script>


<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Araç-Marka Sayılar</h4>

            <div style="height: 260px;">
                <canvas id="my2Chart" height="220"></canvas>
                <script>
                    var values = document.getElementById('my2Chart').getContext('2d');
                    var myChart = new Chart(values, {
                        type: 'pie',
                        data: {
                            labels: ['BMW', 'Renault', 'Mercedes', 'Chefrolet', 'Fiat', 'Skoda'],
                            datasets: [{
                                label: "Marka Grafik Listesi",
                                data: [20, 14, 12, 10, 9, 18],
                                backgroundColor: [
                                    'rgba(255,99,132,0.7)',
                                    'rgba(54,162,235,0.7)',
                                    'rgba(255,206,86,0.7)',
                                    'rgba(75,192,192,0.7)',
                                    'rgba(153,102,255,0.7)',
                                    'rgba(255,159,64,0.7)',
                                ],

                                borderColor: [
                                    'rgba(255,99,132,1',
                                    'rgba(54,162,235,1)',
                                    'rgba(255,206,86,1)',
                                    'rgba(75,192,192,1)',
                                    'rgba(153,102,255,1)',
                                    'rgba(255,159,64,1)',
                                ],
                                borderWidth: 1
                            }]
                        }
                    });
                </script>
            </div>

            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>@ViewBag.CarCount</h4>
                    <p class="text-muted mb-0">Araç Sayısı</p>
                </div>
                <div class="col-6">
                    <h4>@ViewBag.BrandCount</h4>
                    <p class="text-muted mb-0">Marka Sayısı</p>
                </div>
            </div>
        </div>
    </div>
</div> 