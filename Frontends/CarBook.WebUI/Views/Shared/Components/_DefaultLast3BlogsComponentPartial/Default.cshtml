@model List<ResultBlogsWithsAuthorDto>
@{
    CarBook.Persistence.Context.CarBookContext carBookContext = new CarBook.Persistence.Context.CarBookContext();
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Blog</span>
                <h2>Son Bloglarımız</h2>
            </div>
        </div>
        <div class="row d-flex">
            @foreach (var x in Model)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <a href="/Blog/BlogDetail?BlogId=@x.BlogId" class="block-20" style="background-image: url('@x.CoverImageUrl');">
                        </a>
                        <div class="text pt-4">
                            <div class="meta mb-3">
                                <div><a href="/Blog/BlogDetail?BlogId=@x.BlogId">@(((DateTime)x.CreatedDate).ToString("MMMM dd")) .@(((DateTime)x.CreatedDate).ToString("yyyy"))</a></div>
                                <div><a href="/Blog/BlogDetail?BlogId=@x.BlogId">@x.Name</a></div>
                                <div><a href="/Blog/BlogDetail?BlogId=@x.BlogId" class="meta-chat"><span class="icon-chat"></span> @carBookContext.Comments.Count(y => y.BlogId == x.BlogId)</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="/Blog/BlogDetail?BlogId=@x.BlogId">@x.Title</a></h3>
                            <p><a href="/Blog/BlogDetail?BlogId=@x.BlogId" class="btn btn-primary">Devamını Oku</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>