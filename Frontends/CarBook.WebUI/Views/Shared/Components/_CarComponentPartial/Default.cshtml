@model List<ResultCarPricingDto>



<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach(var x in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@x.CoverImage);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="car-single.html">@x.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@x.BrandName</span>
                                <p class="price ml-auto">@x.PricingAmount.ToString("C") <span>/@x.PricingName</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a href="/Reservation/Index?CarId=@x.CarId" class="btn btn-primary py-2 mr-1">Hemen Kirala</a> <a href="car-single.html" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>