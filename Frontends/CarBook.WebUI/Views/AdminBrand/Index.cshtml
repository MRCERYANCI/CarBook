@model List<ResultBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Count = 0;
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Araba Markaları Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Arabalarla ilgili yeni özellik ekleme; (Klima, Bluetooth, Audio, Elektrik, vs.) özellikler listesi, özellikler üzerinde düzenleme ve bir özelliği kaldırma
                        işlemine buradan gerçekleştirebilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Marka</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Markaya Ait Araçlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    Count++;
                                    <tr>
                                        <td>@Count</td>
                                        <td>@x.Name</td>
                                        <td><a href="/AdminBrand/DeleteBrand?BrandId=@x.BrandId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminBrand/GetBrand?BrandId=@x.BrandId" class="btn btn-outline-warning">Güncelle</a></td>
                                        <td><a href="#" class="btn btn-outline-dark">Markaya Ait Araçlar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a href="/AdminBrand/CreateBrand" class="btn btn-outline-primary">Yeni Marka Girişi</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="bg-danger text-white p-4 text-center" style="border-radius:25px;">Markalar Bulunamadı</div>
}

