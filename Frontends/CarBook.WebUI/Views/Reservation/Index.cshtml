@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<br />
<div class="col-md-12 block-9 mb-md-5">
    <form method="POST" class="bg-light p-5 contact-form">
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" class="form-control" placeholder="Lütfen Adınızı Giriniz..." required>
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" class="form-control" placeholder="Lütfen Soyadınızı Giriniz..." required>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Lütfen 11 Haneli TC. Kimlik Numaranızı Giriniz..." required>
        </div>
        <div class="form-group">
            <input type="date" class="form-control" required>
        </div>

        <div class="form-group">
            <input type="email" class="form-control" placeholder="Lütfen Mail Adresinizi Giriniz(örn:aliyildirim@gmail.com)">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Lütfen Ehliyet Aldığınız Yaşınızı Giriniz..." required>
        </div>
        <div class="form-group">
            <input type="tel" class="form-control" placeholder="Lütfen 11 Haneli Telefon Numaranızı Giriniz(örn: 0546 789 12 45)">
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.DropOfLocationId, (List<SelectListItem>)ViewBag.LocationItems, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.PickUpLocationId, (List<SelectListItem>)ViewBag.LocationItems, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Bizlere İletmek İstediğiniz Mesaj Varsa Buradan İletebilirsiniz..."></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyon Yap" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

