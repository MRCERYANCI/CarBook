@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<br />
<div class="col-md-12 block-9 mb-md-5">
    <form method="POST" class="bg-light p-5 contact-form">
        <div class="alert alert-success text-center text-black d-none">Rezervasyonunuz Başarıyla Alınmıştır</div>

        <div class="form-group">
            <input type="text" asp-for="CarId" class="form-control d-none" value="@ViewBag.CarId">
        </div>
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Lütfen Adınızı Giriniz..." required>
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="Lütfen Soyadınızı Giriniz..." required>
        </div>
        <div class="form-group">
            <label>TC Kimlik Numarası</label>
            <input type="text" asp-for="TC" class="form-control" placeholder="Lütfen 11 Haneli TC. Kimlik Numaranızı Giriniz..." required>
        </div>

        <div class="form-group">
            <label>Doğum Tarihiniz</label>
            <input type="date" asp-for="BirthdayDate" class="form-control" required>
        </div>

        <div class="form-group">
            <label>Mail Adresiniz</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Lütfen Mail Adresinizi Giriniz(örn:aliyildirim@gmail.com)">
        </div>
        <div class="form-group">
            <label>Ehliyeti Kaç Yaşında Aldınız</label>
            <input type="text" asp-for="DriverLicanseYear" class="form-control" placeholder="Lütfen Ehliyet Aldığınız Yaşınızı Giriniz..." required>
        </div>
        <div class="form-group">
            <label>Telefon Numarası</label>
            <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="Lütfen 11 Haneli Telefon Numaranızı Giriniz(örn: 0546 789 12 45)">
        </div>
        <div class="form-group">
            <label>Alınacak Lokasyon</label>
            @Html.DropDownListFor(x => x.DropOfLocationId, (List<SelectListItem>)ViewBag.LocationItems, new { @class = "form-control"})
        </div>
        <div class="form-group">
            <label>Bırakılacak Lokasyon</label>
            @Html.DropDownListFor(x => x.PickUpLocationId, (List<SelectListItem>)ViewBag.LocationItems, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>İletmek İstediğiniz Mesaj</label>
            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Bizlere İletmek İstediğiniz Mesaj Varsa Buradan İletebilirsiniz..."></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary py-3 px-5">Rezervasyon Yap</button>
        </div>
    </form>

</div>

