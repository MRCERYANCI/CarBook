@model List<ResultCarDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Listesi</h4>
                <p class="card-subtitle mb-4">
                    Arabalarla ilgili ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Görsel</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Yakıt Türü</th>
                                <th>Koltuk Sayısı</th>
                                <th>Vites Türü</th>
                                <th>Km</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Detaylar</th>
                                <th>Özellik Ata</th>
                                <th>Sitede Gör</th>
                                <th>Yorum Yap</th>
                                <th>Fiyat Bilgileri</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var x in Model)
                            {
                                Count++;
                                <tr>
                                    <td>@Count</td>
                                    <td><img src="@x.CoverImage" width="50" height="50"/></td>
                                    <td>@x.BrandName</td>
                                    <td>@x.Model</td>
                                    <td>@x.Fuel</td>
                                    <td>@x.Seat</td>
                                    <td>@x.Transmission</td>
                                    <td>@x.km</td>
                                    <td><a href="/AdminCar/DeleteCar?CarId=@x.CarId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/AdminCar/GetCar?CarId=@x.CarId" class="btn btn-outline-warning">Güncelle</a></td>
                                    <td><a href="/CarBookAdmin/CarDetail/CarFeatureDetail/@x.CarId" class="btn btn-outline-dark">Detaylar</a></td>
                                    <td><a href="/CarBookAdmin/CarDetail/CreateFeatureByCar/@x.CarId" class="btn btn-outline-primary">Özellik Ata</a></td>
                                    <td><a href="/Car/CarDetail/@x.CarId" class="btn btn-outline-warning">Sitede Gör</a></td>
                                    <td><a href="/CarBookAdmin/CarDetail/CarDetailComment/@x.CarId" class="btn btn-outline-success">Yorum Yap</a></td>
                                    <td><a href="#" class="btn btn-outline-secondary">Fiyat Bilgileri</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/AdminCar/CreateCar" class="btn btn-outline-primary">Yeni Araç Girişi</a>
            </div>
        </div>
    </div>
</div>

