@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Count = 0;
}

@if(Model.Count() > 0){
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Özellikleri Listesi</h4>
                <p class="card-subtitle mb-4">
                    Arabalarla ilgili yeni özellik ekleme; (Klima, Bluetooth, Audio, Elektrik, vs.) özellikler listesi, özellikler üzerinde düzenleme ve bir özelliği kaldırma 
                    işlemine buradan gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Özellik</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var x in Model)
                            {
                                Count++;
                                <tr>
                                    <td>@Count</td>
                                    <td>@x.Name</td>
                                    <td><a href="/AdminFeature/DeleteFeature?FeatureId=@x.FeatureId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/AdminFeature/GetFeature?FeatureId=@x.FeatureId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/AdminFeature/CreateFeature" class="btn btn-outline-primary">Yeni Özellik Girişi</a>
            </div>
        </div>
    </div>
</div>
}
else{
    <div class="bg-danger text-white p-4 text-center" style="border-radius:25px;">Araç Özelliği Bulunamadı</div>
    <br />
    <a href="/AdminFeature/CreateFeature" class="btn btn-outline-primary">Yeni Özellik Girişi</a>
}


