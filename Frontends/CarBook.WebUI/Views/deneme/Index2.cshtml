@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Initials</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .profile {
            width: 50px;
            height: 50px;
            background-color: #007bff;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 18px;
            border-radius: 50%;
            position: relative;
            text-transform: uppercase; /* Harfleri büyük yap */
        }

    </style>
</head>
<body>
    <div class="profile" data-name="Hüsniye Demirayak"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const profile = document.querySelector('.profile');
            const name = profile.getAttribute('data-name');
            const initials = name.split(' ').map(word => word[0]).join('');

            profile.textContent = initials;
        });

    </script>
</body>
</html>
