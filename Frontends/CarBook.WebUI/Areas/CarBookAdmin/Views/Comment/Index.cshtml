@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yorum Listesi - Blog İsmi:</h4>
                <p class="card-subtitle mb-4">
                   Bloglarla ilgili o bloğa olan yorum listesini bu sayfadan görebilirsiniz. İlgili yorumları kaldırabilir ya da
                   tekrar aktif hale getirebilirsiniz. Bunun için yorumların altında yer alan butonları kullanabilirsiniz.
                </p>
                @foreach(var x in Model)
                {
                    count++;

                    <div class="col-md-12">
                        <div class="card">
                            <h5 class="card-header">@(((DateTime)x.CreatedDate).ToString("MMMM dd")) .@(((DateTime)x.CreatedDate).ToString("yyyy"))</h5>
                            <div class="card-body">
                                <h4 class="card-title">@x.Name</h4>
                                <p class="card-text">
                                    @x.Description
                                </p>
                                <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

