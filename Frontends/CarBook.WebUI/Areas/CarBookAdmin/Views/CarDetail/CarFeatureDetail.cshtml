@model List<ResultCarFeatureDto>

@{
    ViewData["Title"] = "CarFeatureDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araca Ait Özellikler Listesi</h4>
                <p class="card-subtitle mb-4">Araca ait özellik eklemesi yapabilir, mevcut özellikleri kaldırabilir, ilgili güncellemeleri gerçekleştirebilirsiniz</p>
                <form method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].CarFeatureId" />
                            <input type="hidden" asp-for="@Model[i].FeatureName" />
                            <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input"/>
                            <label class="form-check-label" for="@Model[i].FeatureName">@Model[i].FeatureName</label>
                        </div>
                    }
                    <button class="btn btn-success mt-3">Değişikleri Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

