@model List<ResultFeatureAvaliable>

@{
    ViewData["Title"] = "CreateFeatureByCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araca Ait Özellikler Ekleme Sayfası</h4>
                <p class="card-subtitle mb-4">Araca ait özellik tanımlaması yapılacak sayfadır.</p>
                <form method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].FeatureId" />
                            <input type="hidden" asp-for="@Model[i].CarId" value="@ViewBag.CarId" />
                            <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                            <label class="form-check-label" for="@Model[i].Name">@Model[i].Name</label>
                        </div>
                    }
                    <button class="btn btn-success mt-3">Araca Özellikleri Ata</button>
                </form>
            </div>
        </div>
    </div>
</div>

