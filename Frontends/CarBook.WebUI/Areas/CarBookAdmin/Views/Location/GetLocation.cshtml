@model UpdateLocationDto

@{
    ViewData["Title"] = "GetLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Lokasyon Veri Güncelleme Alanı</h4>
        <p class="card-subtitle mb-12">
            Araçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin girildiği sayfadır. Bilgileri eksiksiz olarak doldurun.
        </p>

        <form method="post">
            <div class="form-group">
                <label for="exampleInputName">Lokasyon Adı</label>
                <input type="hidden" asp-for="LocationId">
            </div>
            <div class="form-group">
                <label for="exampleInputName">Lokasyon Adı</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lütfen Lokasyon Adını Giriniz...">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
        </form>
    </div>
</div>

