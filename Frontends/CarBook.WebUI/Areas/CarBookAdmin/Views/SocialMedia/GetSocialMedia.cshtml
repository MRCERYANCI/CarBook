@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "GetSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="card">
    <div class="card-body">

        <h4 class="card-title">Sosyal Medya Veri Girişi Alanı</h4>
        <p class="card-subtitle mb-12">
            Sosyal medya hesaplarınıza ait veri girişlerini buradan yapabilirsiniz. Yeni bir sosyal medya ekleyebelir, mevcut sosyal medya hesaplarınızı silebilir ya da
            düzenleyebilirsiniz. İkonlarla ilgili listeye ikon listesi üzerinden ulaşabilirsiniz.
        </p>

        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="SocialMediaId">
            </div>
            <div class="form-group">
                <label for="exampleInputName">Sosyal Medya Adı</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lütfen Sosyal Medya Adını Giriniz...">
            </div>
            <div class="form-group">
                <label for="exampleInputName">Sosyal Medya Adresi</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Url" placeholder="Lütfen Sosyal Medya Url'ini Giriniz...">
            </div>
            <div class="form-group">
                <label for="exampleInputName">Sosyal Medya Icon</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Icon" placeholder="Lütfen Sosyal Medya Iconu'nu Giriniz...">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
        </form>
    </div>
</div>
