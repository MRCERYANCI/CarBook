@model List<ResultSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sosyal Medya Alanı</h4>
                <p class="card-subtitle mb-4">
                    Ana Sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki sayfadan gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Sosyal Medya Adı</th>
                                <th>Sil</th>
                                <th>Güncelleme</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var SocialMedia in Model)
                            {
                                Count++;

                                <tr>
                                    <td>@Count</td>
                                    <td><a href="@SocialMedia.Url" target="_blank">@SocialMedia.Name</a></td>
                                    <td><a href="/CarBookAdmin/SocialMedia/DeleteSocialMedia?SocialMediaId=@SocialMedia.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/CarBookAdmin/SocialMedia/GetSocialMedia?SocialMediaId=@SocialMedia.SocialMediaId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/CarBookAdmin/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni Sosyal Medya Girişi</a>
            </div>
        </div>
    </div>
</div>

